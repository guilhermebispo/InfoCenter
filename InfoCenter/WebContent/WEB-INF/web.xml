<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>InfoCenter</display-name>
	<servlet>
		<servlet-name>ServletCliente</servlet-name>
		<servlet-class>br.com.infoCenter.apresentacao.ClienteServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletVenda</servlet-name>
		<servlet-class>br.com.infoCenter.apresentacao.VendaServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletLogin</servlet-name>
		<servlet-class>br.com.infoCenter.apresentacao.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletProduto</servlet-name>
		<servlet-class>br.com.infoCenter.apresentacao.ProdutoServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletPagamento</servlet-name>
		<servlet-class>br.com.infoCenter.apresentacao.PagamentoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletCliente</servlet-name>
		<url-pattern>/cliente</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletVenda</servlet-name>
		<url-pattern>/venda</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletLogin</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletProduto</servlet-name>
		<url-pattern>/produto</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletPagamento</servlet-name>
		<url-pattern>/pagamento</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>